{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "none",       // âœ… browser-friendly (no exports/require)
    "target": "es6",        // works in all modern browsers
    "types": [],

    // Other Outputs
    "sourceMap": true,
    "declaration": false,   // not needed unless you publish a library
    "declarationMap": false,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
